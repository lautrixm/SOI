@echo off
:principal
  cls
  echo.    menu principal
  echo.
 color 02
  echo. 1- Realizar operaciones aritméticas 
  echo. 2- Busca fichero 
  echo. 3- Mostrar hora 
  echo. 4- Mostrar fichero 
  echo. 5- Salir  
  set /p opcion=su opcion es:
   
  IF "%opcion%" == "1" goto calculadora 
  IF "%opcion%" == "2" goto Busca fichero 
  IF "%opcion%" == "3" goto Mostrar hora 
  IF "%opcion%" == "4" goto Mostrar fichero 
  IF "%opcion%" == "5" goto Salir
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////
:calculadora
     echo.
     color 72
     echo. 1. ingrese 1 para sumar
     echo. 2. ingrese 2 para restar
     echo. 3. ingrese 3 para multiplicar
     echo. 4. ingrese 4 para dividir
     echo. 5. ingrese 5 para salir
     set /p opcion2=su opcion es:
     IF "%opcion2%" == "1" goto suma
     IF "%opcion2%" == "2" goto resta
     IF "%opcion2%" == "3" goto multiplicar
     IF "%opcion2%" == "4" goto dividir
     IF "%opcion2%" == "5" goto principal

     echo. el numero %opcion% no es un a opcion valida. por favor intentalo de nuevo
        echo.
     pause
     echo.
     goto principal
     EXIT 
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////

    :suma
     echo.
     echo a selecionado la opcion de sumar 
     set /p numero1="ingrese el primer numero que quiere sumar:"
     set /p numero2="ingrese el segundo numero que quiere sumar:"
     set /a suma= %numero1% + %numero2%
     echo la suma de los dos numeros es: %suma%
     echo.
     call :continuar suma
     pause
     goto calculadora 
     EXIT 
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
      EXIT 
    :resta
     echo.
     echo a selecionado la opcion de restar
     set /p numero1="ingrese el primer numero que quiere restar:"
     set /p numero2="ingrese el segundo numero que quiere restar:"
     set /a resta= %numero1% - %numero2%
     echo la suma de los dos numeros es: %resta%
     echo.
     call :continuar resta
     pause
     goto calculadora
      EXIT 
      rem /////////////////////////////////////////////////////////////////////////////////////////////////////
      rem /////////////////////////////////////////////////////////////////////////////////////////////////////
      rem /////////////////////////////////////////////////////////////////////////////////////////////////////

    :multiplicacion
     echo.
     echo a selecionado la opcion de multiplicar
     set /p numero1="ingrese el primer numero :"
     set /p numero2="ingrese el segundo numero :"
     set /a multiplicacion= %numero1% * %numero2%
     echo la suma de los dos numeros es: %multiplicacion%
     echo.
     call :continuar multiplicacion
     pause
     goto calculadora 
      EXIT 
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////


    :divicion
     echo.
     echo a selecionado la opcion de dividir
     set /p numero1="ingrese el primer numero :"
     set /p numero2="ingrese el segundo numero:"
     set /a divicion= %numero1% / %numero2%
     echo la suma de los dos numeros es: %divicion%
     echo.
     call :continuar resta
     pause
     goto calculadora 
      EXIT 
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////

    
    
:Busca fichero 
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////
 rem /////////////////////////////////////////////////////////////////////////////////////////////////////

:Mostrar hora
 set /a hor=%time:~,2%
 set /a min=%time:~3,2%
 echo %hor%:%min%
 echo.
 pause
:Mostrar fichero 
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////
     rem /////////////////////////////////////////////////////////////////////////////////////////////////////

:Salir 
 echo.
 set /p cont1="¿estás seguro/a que quieres salir si/no ?"
 IF "%cont1%"== "si" goto salir2
 IF "%cont1%"== "no" goto principal

:salir2
 @cls&exit
